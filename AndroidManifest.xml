<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.zllr.precisepitch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="16" />

    <!-- we need to access the microphone -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="True"
        android:icon="@drawable/ic_launcher_pp"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="net.precise_team.cellocoach.PrecisePitchHome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.precise_team.cellocoach.TunerActivity"
            android:label="@string/title_activity_precise_pitch_home" >
        </activity>
        <activity
            android:name="net.precise_team.cellocoach.FingerboardHeatMap"
            android:label="@string/title_activity_fingerboard_heat_map" >
        </activity>
        <activity
            android:name="net.precise_team.cellocoach.PracticeActivity"
            android:label="@string/practice_note_sequences"
	    android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="net.precise_team.cellocoach.GameSetupActivity"
            android:label="@string/pitch_competition" >
        </activity>
        <activity
            android:name="net.precise_team.cellocoach.GamePlayActivity"
            android:label="@string/pitch_competition" >
        </activity>
        <activity
            android:name="net.precise_team.cellocoach.CarRaceAnimation"
            android:label="@string/title_activity_car_race_animation" >
        </activity>
        <activity android:name=".GameResultActivity"/>
    </application>

</manifest>
